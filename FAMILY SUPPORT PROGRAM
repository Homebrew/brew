    <script>
        // Element selectors
        const menuToggle = document.getElementById('menu-toggle');
        const clientListPanel = document.getElementById('client-list-panel');
        const messageForm = document.getElementById('message-form');
        const messageInput = document.getElementById('message-input');
        const messageContainer = document.getElementById('message-container');
        const chatClientName = document.getElementById('chat-client-name');
        const clipboardToggle = document.getElementById('clipboard-toggle');
        const clipboardPanel = document.getElementById('clipboard-panel');
        const clipboardClose = document.getElementById('clipboard-close');
        
        // Voice Call selectors
        const callBtn = document.getElementById('call-btn');
        const callInterface = document.getElementById('call-interface');
        const callClientName = document.getElementById('call-client-name');
        const callStatus = document.getElementById('call-status');
        const endCallBtn = document.getElementById('end-call-btn');
        const muteBtn = document.getElementById('mute-btn');

        // Toggle client list on mobile
        menuToggle.addEventListener('click', () => {
            clientListPanel.classList.toggle('-translate-x-full');
        });

        // Toggle clipboard panel
        clipboardToggle.addEventListener('click', () => {
            clipboardPanel.classList.toggle('translate-x-full');
        });
        clipboardClose.addEventListener('click', () => {
            clipboardPanel.classList.add('translate-x-full');
        });


        // Function to handle client selection
        function selectClient(element, clientName) {
            // Remove active state from all clients
            const allClients = document.querySelectorAll('#client-list-panel > div > div');
            allClients.forEach(client => {
                client.classList.remove('bg-blue-50', 'border-blue-500');
                client.classList.add('border-transparent');
            });

            // Add active state to the clicked client
            element.classList.add('bg-blue-50', 'border-blue-500');
            element.classList.remove('border-transparent');

            // Update chat header with the client's name
            chatClientName.textContent = clientName;
            
            // On mobile, hide the client list after selection
            if (window.innerWidth < 768) {
                 clientListPanel.classList.add('-translate-x-full');
            }
        }

        // Handle sending a message
        messageForm.addEventListener('submit', (e) => {
            e.preventDefault();
            const messageText = messageInput.value.trim();

            if (messageText) {
                const messageElement = document.createElement('div');
                messageElement.classList.add('flex', 'items-start', 'gap-3', 'justify-end', 'mb-4');
                
                const now = new Date();
                const timeString = now.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });

                messageElement.innerHTML = `
                     <div class="bg-blue-500 text-white p-3 rounded-lg rounded-br-none shadow-sm max-w-md">
                        <p class="text-sm">${messageText}</p>
                        <span class="text-xs text-blue-200 mt-1 block text-right">${timeString}</span>
                    </div>
                    <img src="https://placehold.co/40x40/4A5568/FFFFFF?text=A" alt="Admin Avatar" class="w-10 h-10 rounded-full">
                `;
                
                messageContainer.appendChild(messageElement);
                messageInput.value = '';
                messageContainer.scrollTop = messageContainer.scrollHeight; // Auto-scroll to the bottom
            }
        });
        
        // Function to copy text from clipboard items
        function copyToClipboard(buttonElement) {
            const textToCopy = buttonElement.previousElementSibling.textContent;
            
            navigator.clipboard.writeText(textToCopy).then(() => {
                const originalIcon = buttonElement.innerHTML;
                buttonElement.innerHTML = `<i class="fas fa-check text-green-500"></i> Copied!`;
                setTimeout(() => { buttonElement.innerHTML = originalIcon; }, 2000);
            }).catch(err => {
                console.error('Failed to copy text: ', err);
                // Fallback for older browsers
                try {
                    const textArea = document.createElement("textarea");
                    textArea.value = textToCopy;
                    document.body.appendChild(textArea);
                    textArea.focus();
                    textArea.select();
                    document.execCommand('copy');
                    document.body.removeChild(textArea);
                    const originalIcon = buttonElement.innerHTML;
                    buttonElement.innerHTML = `<i class="fas fa-check text-green-500"></i> Copied!`;
                    setTimeout(() => { buttonElement.innerHTML = originalIcon; }, 2000);
                } catch (e) { console.error('Fallback copy failed', e); }
            });
        }

        // --- Voice Call Logic ---
        callBtn.addEventListener('click', () => {
            // Update call UI with current client's name
            callClientName.textContent = chatClientName.textContent;
            // Show the call interface
            callInterface.classList.remove('hidden');
            
            // Simulate call connection
            callStatus.textContent = 'Calling...';
            setTimeout(() => {
                callStatus.textContent = 'Connected';
            }, 2500);
        });

        endCallBtn.addEventListener('click', () => {
            callInterface.classList.add('hidden');
        });

        muteBtn.addEventListener('click', () => {
            const icon = muteBtn.querySelector('i');
            icon.classList.toggle('fa-microphone');
            icon.classList.toggle('fa-microphone-slash');
            muteBtn.classList.toggle('bg-blue-500');
            muteBtn.classList.toggle('text-white');
        });


        // Ensure the message container starts scrolled to the bottom
        window.onload = () => {
             messageContainer.scrollTop = messageContainer.scrollHeight;
        }

    </script>
</body>
</html>
